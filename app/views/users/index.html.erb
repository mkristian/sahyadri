<h1>Listing users</h1>

<%= link_to 'New user', new_user_path %>

<table>
  <tr>
    <th>Login</th>
    <th>Name</th>
    <th>Email</th>
  </tr>

<% @users.sort { |u,v| u.name <=> v.name }.each do |user| %>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%= link_to 'Show', user_path(user.key) %></td>
    <td><%= link_to 'Edit', edit_user_path(user.key) %></td>
    <td><%= link_to 'Destroy', user_path(user.key), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

